#/bin/zsh



if [[ $(uname) = 'FreeBSD' ]]; then
  echo "FreeBSD is the way to be."
  fi
if [[ $(uname) = 'Linux' ]]; then
  echo "Linux"
  DISTRO=$(awk '/^ID=/ { printf $0 }' /etc/*release* | cut -c4- )
  echo $DISTRO
       if [[ $DISTRO = 'arch' ]]; then
          echo "Arch sweet Arch."
          #Set RVM path - For now per user.
          [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
          elif [[ $DISTRO = 'gentoo' ]]; then
          echo "Gentoo is here."


       elif [[ $DISTRO  = 'ubuntu' ]]; then
          echo 'Why did you install Ubuntu again?'

       else
         echo "'You need to make a case for this Distro: '$DISTRO"
       fi
fi
